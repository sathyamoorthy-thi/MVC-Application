<div class="form-style-5">
	
<form method="post" >
<fieldset>
<legend><span class="number">1</span> Candidate Info</legend>

<div  class="form-group">
@Html.DisplayNameFor(m => m.Name)
<input type="text" asp-for="Name" name="Name" class="form-control required" value="@Context.Session.GetString("username")" / >
<span class="error-message">@Html.ValidationMessageFor(m => m.Name)</span>
</div>

<div class="form-group">
@Html.DisplayNameFor(m => m.Email)
<input type="email" name="Email" asp-for="Email" class="form-control required" value="@Context.Session.GetString("mailid")" />
<span class="error-message">@Html.ValidationMessageFor(m => m.Email)</span>
</div>



<div class="form-group">
@Html.DisplayNameFor(m => m.PhoneNumber)	
<input type="tel" name="PhoneNumber" asp-for="PhoneNumber" class="form-control required"  >
<span class="error-message">@Html.ValidationMessageFor(m => m.PhoneNumber)</span>
</div>
</fieldset>
<fieldset>
<legend><span class="number">2</span> Reimbursement Info</legend>

<div class="form-group">
 
@Html.DisplayNameFor(m => m.Type) 
<!--<label for="Type" asp-for="Type">Reimbursement Type:</label >-->
<div>
<select id="Type" asp-for="Type" class="form-control required" name="Type" >

	
<optgroup label="Choose...">
   
  <option value="Travel">Travel</option>
  <option value="Medical">Medical</option>
  <option value="Team Occusation">Team Occusation</option>
  <option value="Office Allowances">Office Allowances</option>
  <option value="Other">Other</option>
</optgroup>
</select> 
<span class="error-message">@Html.ValidationMessageFor(m => m.Type)</span>
</div>

<div class="form-group">
<!--<label>Date:</label>-->
@Html.DisplayNameFor(m => m.Date)
<input type="date" asp-for="Date" name="Date"  min="2023-05-01" id="myDateInput" placeholder="Choose the current date" >
<span class="error-message">@Html.ValidationMessageFor(m => m.Date)</span>
</div>

<div class="form-group">
<!--<label for="amount">Amount:</label>-->
@Html.DisplayNameFor(m => m.Amount)
<input type="number" id="amount" asp-for="Amount" name="Amount"  class="input"  >
<span class="error-message">@Html.ValidationMessageFor(m => m.Amount)</span>
</div>

 <div class="form-group">
			<!--<label for="currency">Currency:</label>-->
			@Html.DisplayNameFor(m => m.Currency)
			<select id="currency" asp-for="Currency" name="Currency"  class="input">
				<option value="INR">INR</option>
				<option value="USD">USD</option>
				<option value="EUR">EUR</option>
			</select>
			 <span class="error-message">@Html.ValidationMessageFor(m => m.Currency)</span>
</div>

		  <div class="form-group">
